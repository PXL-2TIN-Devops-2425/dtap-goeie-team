pipeline {
    agent any
  
    stages {
        stage ('cleanup'){
            steps{
                cleanWs()
            }
        }
        
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage('Install dependencies'){
            steps{
                script {
                    env.NODEJS_HOME = "${tool 'testenvnode'}"
                    env.PATH="${env.NODEJS_HOME}/bin:${env.PATH}"
                    sh 'npm install'
                }
            }
        }
        stage('Build artifact'){
            steps{
                script {
                    sh "docker build -t calculator-app:latest ."
                }
            }
        }
        stage('Push artifact') {
            steps {
                script {
                    def dockerHubUser = "lucadanijspxl"
                    def dockerImageName = "calculator-app:latest"
                    def fullImageName = "${dockerHubUser}/calculator-app:latest"

                    sh "echo ${env.DOCKER_PASSWORD} | docker login -u ${env.DOCKER_USERNAME} --password-stdin"

                    sh "docker tag calculator-app:latest ${fullImageName}"

                    sh "docker push ${fullImageName}"
                }
            }
        }

    }
}